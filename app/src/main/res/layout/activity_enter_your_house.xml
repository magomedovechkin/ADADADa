<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/street_facade_of_the_long_house"
    tools:context=".EnterYourHouseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/tint"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="175px"
            android:layout_height="197px"
            android:src="@drawable/logo"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Smart House"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="142dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/_1"
            android:backgroundTint="#E1D892"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="E-mail"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:textSize="32px"
                    android:inputType="textWebEmailAddress"/>

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:textSize="32px"
                    android:inputType="textPassword"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/enter_your_house_btn"
            android:layout_width="308dp"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#984E4F"
            android:text="Enter Your House"
            android:textSize="29px"
            android:onClick="enter_your_hose_click"/>

        <Button
            android:id="@+id/new_resident_btn"
            android:layout_width="308dp"
            android:layout_height="61dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#2A2A37"
            android:text="New Resident"
            android:textSize="29px"
            android:onClick="new_resident_click"/>
    </LinearLayout>
</LinearLayout>